@model ETicaret.Core.Models.ContactViewModel
@{
    ViewData["Title"] = "İletişim";
}

<div class="contact-page">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header text-center">
            <h1>İletişim</h1>
            <p>Bizimle iletişime geçin, size yardımcı olmaktan mutluluk duyarız</p>
        </div>

        <div class="contact-content">
            <div class="row">
                <!-- Contact Form -->
                <div class="col-lg-8">
                    <div class="contact-form-wrapper">
                        <h3>Mesaj Gönderin</h3>
                        
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["SuccessMessage"]
                            </div>
                        }
                        
                        <form asp-action="Contact" method="post" class="contact-form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name">Ad Soyad *</label>
                                        <input asp-for="Name" type="text" class="form-control" placeholder="Adınız ve soyadınız">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email">E-posta *</label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresiniz">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Subject">Konu *</label>
                                <input asp-for="Subject" type="text" class="form-control" placeholder="Mesaj konusu">
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Message">Mesaj *</label>
                                <textarea asp-for="Message" class="form-control" rows="6" placeholder="Mesajınızı buraya yazın..."></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>Mesaj Gönder
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
               </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
