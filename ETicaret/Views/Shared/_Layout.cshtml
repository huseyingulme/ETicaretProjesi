<!DOCTYPE html
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Oyuncak Dünyası</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Enhanced Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <!-- Enhanced Brand -->
            <a class="navbar-brand fw-bold text-primary d-flex align-items-center" href="/">
                <div class="brand-icon me-3">
                    <i class="fas fa-gift"></i>
                </div>
                <div class="brand-text">
                    <span class="brand-title">Oyuncak Dünyası</span>
                    <span class="brand-subtitle">Eğlencenin Adresi</span>
                </div>
            </a>
            
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Enhanced Navigation Menu -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link nav-link-enhanced dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-th-large me-2"></i>Kategoriler
                        </a>
                        <ul class="dropdown-menu dropdown-menu-enhanced">
                            @if (ViewBag.Categories != null)
                            {
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <li><a class="dropdown-item" href="/Home/CategoryProducts/@category.Id">
                                        <i class="fas fa-tag me-2"></i>@category.Name
                                    </a></li>
                                }
                            }
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link nav-link-enhanced dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-crown me-2"></i>Markalar
                        </a>
                        <ul class="dropdown-menu dropdown-menu-enhanced">
                            @if (ViewBag.Brands != null)
                            {
                                @foreach (var brand in ViewBag.Brands)
                                {
                                    <li><a class="dropdown-item" href="/Home/BrandProducts/@brand.Id">
                                        <i class="fas fa-star me-2"></i>@brand.Name
                                    </a></li>
                                }
                            }
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-enhanced" href="/Home/Contact">
                            <i class="fas fa-envelope me-2"></i>İletişim
                        </a>
                    </li>
                </ul>
                
                <!-- Enhanced Right Side -->
                <div class="d-flex align-items-center">
                    <!-- Enhanced Search Box -->
                    <div class="search-box me-3">
                        <div class="input-group search-input-group">
                            <input type="text" class="form-control search-input" placeholder="Ürün ara...">
                            <button class="btn btn-search" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    
                    <!-- Enhanced User Menu -->
                    <div class="user-menu me-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button class="btn btn-user dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-2"></i>@(User.Identity?.Name ?? "Kullanıcı")
                                </button>
                                <ul class="dropdown-menu dropdown-menu-enhanced dropdown-menu-end">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" href="/Admin/Main">
                                            <i class="fas fa-tachometer-alt me-2"></i>Admin Panel
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li><a class="dropdown-item" href="/Account/Profile">
                                        <i class="fas fa-user-edit me-2"></i>Profil
                                    </a></li>
                                    <li><a class="dropdown-item" href="/Address">
                                        <i class="fas fa-map-marker-alt me-2"></i>Adreslerim
                                    </a></li>
                                    <li><a class="dropdown-item" href="/Order/MyOrders">
                                        <i class="fas fa-shopping-bag me-2"></i>Siparişlerim
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                                            <button type="submit" class="dropdown-item" style="border: none; background: none; width: 100%; text-align: left;">
                                                <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="btn-group" role="group">
                                <a href="/Account/Login" class="btn btn-login">
                                    <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                                </a>
                                <a href="/Account/Register" class="btn btn-register">
                                    <i class="fas fa-user-plus me-2"></i>Üye Ol
                                </a>
                            </div>
                        }
                    </div>
                    
                    <!-- Enhanced Favorites Button -->
                    <a href="/Favorites" class="btn btn-favorites me-3 position-relative favorite-nav-btn">
                        <i class="fas fa-heart me-2"></i>Favorilerim
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill favorite-badge" id="favoriteCountBadge" style="display: none;">
                            0
                        </span>
                    </a>
                    
                    <!-- Enhanced Cart Button -->
                    <a href="/Cart" class="btn btn-cart position-relative cart-nav-btn">
                        <i class="fas fa-shopping-cart me-2"></i>Sepetim
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill cart-badge cart-count" id="cartCountBadge" style="display: none;">
                            0
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Sayfa yüklendiğinde favori sayısını güncelle
        document.addEventListener('DOMContentLoaded', function() {
            // Favori sayısını güncelle
            if (typeof updateFavoriteCount === 'function') {
                updateFavoriteCount();
            }
            
            // Favori butonlarının durumunu güncelle
            updateFavoriteButtonStates();
            
            // Sepet sayısını güncelle
            updateCartCount();
        });
        
        // Sepet sayısını güncelle
        async function updateCartCount() {
            try {
                const response = await fetch('/Cart/GetCartCount');
                if (response.ok) {
                    const data = await response.json();
                    const cartCountElement = document.getElementById('cartCountBadge');
                    if (cartCountElement) {
                        cartCountElement.textContent = data.count;
                        cartCountElement.style.display = data.count > 0 ? 'inline' : 'none';
                    }
                }
            } catch (error) {
                console.error('Sepet sayısı güncellenirken hata:', error);
            }
        }
        
        // Favori butonlarının durumunu güncelle
        async function updateFavoriteButtonStates() {
            try {
                const favoriteButtons = document.querySelectorAll('[data-product-id]');
                if (favoriteButtons.length === 0) return;
                
                const productIds = Array.from(favoriteButtons).map(btn => 
                    parseInt(btn.getAttribute('data-product-id'))
                );
                
                for (const productId of productIds) {
                    try {
                        const response = await fetch(`/Favorites/IsFavorite?productId=${productId}`);
                        if (response.ok) {
                            const data = await response.json();
                            const button = document.querySelector(`[data-product-id="${productId}"]`);
                            if (button) {
                                updateFavoriteButton(button, data.isFavorite);
                            }
                        }
                    } catch (error) {
                        console.error(`Ürün ${productId} için favori durumu kontrol edilirken hata:`, error);
                    }
                }
            } catch (error) {
                console.error('Favori buton durumları güncellenirken hata:', error);
            }
        }
        
        // Favori buton durumunu güncelle
        function updateFavoriteButton(button, isFavorite) {
            if (isFavorite) {
                button.classList.remove('favorite-btn');
                button.classList.add('favorite-btn-active');
                button.innerHTML = '<i class="fas fa-heart me-2"></i>Favorilerden Çıkar';
                button.onclick = () => removeFromFavorites(parseInt(button.getAttribute('data-product-id')));
                button.title = 'Favorilerden Kaldır';
            } else {
                button.classList.remove('favorite-btn-active');
                button.classList.add('favorite-btn');
                button.innerHTML = '<i class="far fa-heart me-2"></i>Favorilere Ekle';
                button.onclick = () => addToFavorites(parseInt(button.getAttribute('data-product-id')));
                button.title = 'Favorilere Ekle';
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
