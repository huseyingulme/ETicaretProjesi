@model ETicaret.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>Şifremi Unuttum
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <p class="text-muted mb-4">
                        E-posta adresinizi giriniz. Size yeni bir şifre oluşturup göstereceğiz.
                    </p>

                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">E-posta Adresi</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input asp-for="Email" class="form-control" placeholder="ornek@email.com" required />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-warning btn-lg rounded-pill">
                                <i class="fas fa-paper-plane me-2"></i>Şifremi Sıfırla
                            </button>
                        </div>
                    </form>
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        <a asp-action="Login" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Giriş sayfasına dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
