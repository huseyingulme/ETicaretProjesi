@model IEnumerable<ETicaret.Core.Entities.Contact>

@{
    ViewData["Title"] = "İletişim Mesajları";
}

<div class="management-header">
    <h1 class="management-title">
        <i class="fas fa-envelope me-3"></i>İletişim Mesajları
    </h1>
    <p class="management-subtitle">Müşterilerinizden gelen iletişim mesajlarını yönetin ve yanıtlayın</p>
    
    <div class="management-stats">
        <div class="stat-item">
            <span class="stat-number">@Model.Count()</span>
            <span class="stat-label">Toplam Mesaj</span>
        </div>
        <div class="stat-item">
            <span class="stat-number">@Model.Count(c => !string.IsNullOrEmpty(c.Email))</span>
            <span class="stat-label">Email Adresli</span>
        </div>
        <div class="stat-item">
            <span class="stat-number">@Model.Count(c => !string.IsNullOrEmpty(c.Phone))</span>
            <span class="stat-label">Telefon Numaralı</span>
        </div>
    </div>
</div>

<div class="action-buttons">
    <a asp-action="Create" class="btn-create">
        <i class="fas fa-plus"></i>
        Yeni Mesaj Oluştur
    </a>
    
</div>

<div class="management-table">
    <table class="table" id="contactsTable">
        <thead>
            <tr>
                <th>Kişi Bilgileri</th>
                <th>İletişim</th>
                <th>Mesaj</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <div class="entity-header">
                            <div class="entity-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <div>
                                <h6 class="entity-title">@item.Name @item.Surname</h6>
                                <small class="text-muted">@DateTime.Now.ToString("dd.MM.yyyy")</small>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="d-flex flex-column gap-2">
                            @if (!string.IsNullOrEmpty(item.Email))
                            {
                                <div class="meta-item">
                                    <i class="fas fa-envelope meta-icon"></i>
                                    <a href="mailto:@item.Email" class="text-decoration-none">@item.Email</a>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.Phone))
                            {
                                <div class="meta-item">
                                    <i class="fas fa-phone meta-icon"></i>
                                    <a href="tel:@item.Phone" class="text-decoration-none">@item.Phone</a>
                                </div>
                            }
                        </div>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Message))
                        {
                            <div class="entity-description">
                                @(item.Message.Length > 80 ? item.Message.Substring(0, 80) + "..." : item.Message)
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Mesaj yok</span>
                        }
                    </td>
                    <td>
                        <div class="table-actions">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action btn-edit">
                                <i class="fas fa-edit"></i>
                                Düzenle
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-action btn-details">
                                <i class="fas fa-eye"></i>
                                Detay
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action btn-delete">
                                <i class="fas fa-trash"></i>
                                Sil
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
