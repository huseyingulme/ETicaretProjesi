@model IEnumerable<ETicaret.Core.Entities.Category>

@{
    ViewData["Title"] = "Kategori Yönetimi";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="management-header">
    <h1 class="management-title">
        <i class="fas fa-tags me-3"></i>Kategori Yönetimi
    </h1>
    <p class="management-subtitle">Sitenizdeki kategorileri yönetin, düzenleyin ve organize edin</p>
    
    <div class="management-stats">
        <div class="stat-item">
            <span class="stat-number">@Model.Count()</span>
            <span class="stat-label">Toplam Kategori</span>
        </div>
        <div class="stat-item">
            <span class="stat-number">@Model.Count(c => c.IsActive)</span>
            <span class="stat-label">Aktif Kategori</span>
        </div>
        <div class="stat-item">
            <span class="stat-number">@Model.Count(c => c.IsTopMenu)</span>
            <span class="stat-label">Üst Menüde</span>
        </div>
    </div>
</div>

<div class="action-buttons">
    <a asp-action="Create" class="btn-create">
        <i class="fas fa-plus"></i>
        Yeni Kategori Ekle
    </a>
     
</div>

<div class="management-table">
    <table class="table" id="categoriesTable">
        <thead>
            <tr>
                <th style="width: 25%;">Kategori Adı</th>
                <th style="width: 30%;">Açıklama</th>
                <th style="width: 8%;">Durum</th>
                <th style="width: 8%;">Üst Menü</th>
                <th style="width: 8%;">Üst Kategori</th>
                <th style="width: 4%;">Sıra</th>
                <th style="width: 17%;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <div class="entity-header">
                            <div class="entity-icon">
                                <i class="fas fa-tag"></i>
                            </div>
                            <div>
                                <h6 class="entity-title">@item.Name</h6>
                            </div>
                        </div>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <span class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</span>
                        }
                        else
                        {
                            <span class="text-muted">Açıklama yok</span>
                        }
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pasif</span>
                        }
                    </td>
                    <td>
                        @if (item.IsTopMenu)
                        {
                            <span class="badge bg-primary">Evet</span>
                        }
                        else
                        {
                            <span class="badge bg-light text-dark">Hayır</span>
                        }
                    </td>
                    <td>
                        @if (item.ParentId.HasValue)
                        {
                            var parentCategory = Model.FirstOrDefault(c => c.Id == item.ParentId.Value);
                            if (parentCategory != null)
                            {
                                <span class="text-muted">@parentCategory.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">Bilinmiyor</span>
                            }
                        }
                        else
                        {
                            <span class="badge bg-info">Ana Kategori</span>
                        }
                    </td>
                    <td>
                        <span class="badge bg-secondary">@item.OrderNo</span>
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detay">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#categoriesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                },
                "pageLength": 25,
                "order": [[5, "asc"]]
            });
        });
    </script>
}
